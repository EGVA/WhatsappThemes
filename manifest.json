{
    "name": "Whatsapp Themes",
    "version": "1.0",
    "description": "Whatsapp Themes",
    "author": "Eric Varola",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "./Popup/popup.html",

        "default_title": "Whatsapp Theme"
    },
    "content_scripts": [
        {
                "matches": [
                    "https://web.whatsapp.com/"
                ],
                "js": [
                    "./Page/content.js"
                ]
        }
        ],
        "permissions": [
            "tabs"
          ],
        "web_accessible_resources": [
            "Themes/*.json"
        ],
    "manifest_version": 2
  }