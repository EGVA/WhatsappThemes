{
    "name": "Whatsapp Theme",
    "version": "1.0",
    "description": "Whatsapp custom themes app",
    "author": "Eric Varola",

    "icons": {
       "128": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "./Popup/popup.html",

        "default_title": "Whatsapp Themes"
    },

    "content_scripts": [
        {
                "matches": [
                    "https://web.whatsapp.com/"
                ],
                "js": [
                    "./Page/content.js"
                ]
        }
        ],
        "web_accessible_resources": [
            "Themes/*.json"
        ],
    "manifest_version": 2
  }